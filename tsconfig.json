{
  "compilerOptions": {
    "lib": [
        "es6"
    ],
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "node16",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}